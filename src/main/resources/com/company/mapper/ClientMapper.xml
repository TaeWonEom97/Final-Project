<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.ClientMapper">

   <!-- 입고 내역 조회 -->
   
   <resultMap type="com.company.domain.ClientDTO" id="clientDto">
      <result property="clcode" column="clcode"/>
      <result property="clname" column="clname"/>
      <result property="clregnum" column="clregnum"/>
      <result property="clrepre" column="clrepre"/>
      <result property="clcellnum" column="clcellnum"/>
      <result property="clemp" column="clemp"/>
      
    </resultMap>

      
    <!-- 입고 내역 조회 -->
   <select id="select" resultMap="clientDto">
      select * from client
   </select>
   
   <!-- 클릭 시 내용 조회 -->
   <select id="clickSelect" resultMap="clientDto">
      select * from client where clcode = #{clcode}
   </select>
   
   <!-- 신규 내역 등록 -->
   <insert id="insert">
      insert into client(clcode, clname, clregnum, clrepre, clcellnum, clemp)
      values(#{clcode},#{clname},#{clregnum},#{clrepre},#{clcellnum},#{clemp})
   </insert>
   
   <!-- 삭제하기 -->
   <delete id="remove">
      delete from client where clcode = #{clcode}
   </delete>
   
   <!-- 수정하기 -->
   <update id="update">
      update client set clname=#{clname}, clregnum=#{clregnum}, clrepre=#{clrepre}, clcellnum=#{clcellnum}, clemp=#{clemp} 
      where clcode = #{clcode}          
   </update>
   
  
</mapper>